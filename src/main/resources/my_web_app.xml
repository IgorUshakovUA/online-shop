<beans>
    <bean id="AllProductsServlet" class="com.study.shop.web.servlet.AllProductsServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/|/products|/products/*"/>
    </bean>
    <bean id="AddProductServlet" class="com.study.shop.web.servlet.AddProductServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/product/add"/>
    </bean>
    <bean id="DeleteProductServlet" class="com.study.shop.web.servlet.DeleteProductServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/product/delete/*"/>
    </bean>
    <bean id="EditProductServlet" class="com.study.shop.web.servlet.EditProductServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/product/edit/*"/>
    </bean>
    <bean id="LoginServlet" class="com.study.shop.web.servlet.LoginServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/login"/>
    </bean>
    <bean id="ShowCartServlet" class="com.study.shop.web.servlet.ShowCartServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/cart"/>
    </bean>
    <bean id="AddToCartServlet" class="com.study.shop.web.servlet.AddToCartServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/add_to_cart/*"/>
    </bean>
    <bean id="DeleteFromCartServlet" class="com.study.shop.web.servlet.DeleteFromCartServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/delete_from_cart/*"/>
    </bean>
    <bean id="PlusOneServlet" class="com.study.shop.web.servlet.PlusOneServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/plus_one_to_cart/*"/>
    </bean>
    <bean id="MinusOneServet" class="com.study.shop.web.servlet.MinusOneServet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/minus_one_from_cart/*"/>
    </bean>
    <bean id="AssetsServlet" class="com.study.shop.web.servlet.AssetsServlet">
        <property name="type" value="servlet"/>
        <property name="urls" value="/assets/*"/>
    </bean>

    <bean id="AdminSecurityFilter" class="com.study.shop.web.filter.AdminSecurityFilter">
        <property name="type" value="filter"/>
        <property name="urls" value="/product/*"/>
    </bean>
    <bean id="UserSecurityFilter" class="com.study.shop.web.filter.UserSecurityFilter">
        <property name="type" value="filter"/>
        <property name="urls" value="/|/products"/>
    </bean>
</beans>